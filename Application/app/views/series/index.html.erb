<p id="notice"><%= notice %></p>

<h1>Series</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ano</th>
      <th>Lenguaje</th>
      <th>Director</th>
      <th>Actores</th>
      <th>Genero</th>
      <th>Resumen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @series.each do |series| %>
      <tr>
        <td><%= series.nombre %></td>
        <td><%= series.ano %></td>
        <td><%= series.lenguaje %></td>
        <td><%= series.director %></td>
        <td><%= series.actores %></td>
        <td><%= series.genero %></td>
        <td><%= series.resumen %></td>
        <td><%= link_to 'Show', series %></td>
        <td><%= link_to 'Edit', edit_series_path(series) %></td>
        <td><%= link_to 'Destroy', series, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

